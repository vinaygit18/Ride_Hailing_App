# Server Configuration
SERVER_PORT=8080
SERVER_ENV=development
SERVER_HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gocomet
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_MAX_LIFETIME_MINUTES=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=100

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key_here
NEW_RELIC_APP_NAME=GoComet-RideHailing
NEW_RELIC_ENABLED=true
NEW_RELIC_LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h

# Pricing Configuration
BASE_FARE_ECONOMY=50
BASE_FARE_PREMIUM=100
BASE_FARE_LUXURY=200
PER_KM_RATE_ECONOMY=10
PER_KM_RATE_PREMIUM=15
PER_KM_RATE_LUXURY=25
PER_MINUTE_RATE_ECONOMY=2
PER_MINUTE_RATE_PREMIUM=3
PER_MINUTE_RATE_LUXURY=5
MAX_SURGE_MULTIPLIER=3.0
MIN_SURGE_MULTIPLIER=1.0

# Matching Configuration
MAX_MATCHING_RADIUS_KM=5
MAX_MATCHING_TIMEOUT_SECONDS=30
MAX_DRIVER_CANDIDATES=10

# Rate Limiting
RATE_LIMIT_LOCATION_UPDATES_PER_SECOND=2
RATE_LIMIT_RIDE_REQUESTS_PER_MINUTE=5
RATE_LIMIT_GENERAL_PER_MINUTE=100

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_HEARTBEAT_INTERVAL_SECONDS=30

# Cache TTL (in seconds)
CACHE_TTL_ACTIVE_RIDES=300
CACHE_TTL_DRIVER_LOCATIONS=300
CACHE_TTL_IDEMPOTENCY=86400

# Log Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Idempotency-Key

# Feature Flags
ENABLE_SURGE_PRICING=true
ENABLE_AUTO_MATCHING=true
ENABLE_REAL_TIME_UPDATES=true
